public class TwosScore {
	private int score;
	
	public TwosScore(int[] values) {
		score = calculateScore(values);
	}
	

	public int calculateScore(int[] values) {	
		int sum = 0;
        for (int i = 0; i < values.length; i++) {
            if (values[i] == 2) {
                sum = sum + values[i];
            }
        }
        return sum;
	} 
	/**
	 * @return the score
	 */
	public int getScore() {
		return score;
	} 
}
